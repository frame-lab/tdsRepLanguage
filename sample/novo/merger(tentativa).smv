 c: {cadeia,de,dados, NULL, -27, -28, -29, 0, 31, 32, 33 };  -- tentativa de equivalencia (une os dois conjuntos de enums)
 ASSIGN

	init(a):= cadeia;
	init(b):= NULL;
	init(c):= NULL; 

	next(a):=
			case
