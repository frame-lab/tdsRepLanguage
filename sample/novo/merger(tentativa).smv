 	b = NULL & 
 	c != NULL & 
 	a = c) 
 	-> next(cs) = q0 )  
 & 
 (( cs = q0 & 
 	a = NULL & 
 	c != NULL & 
 	b = c)  
 	-> next(cs) = q0);

